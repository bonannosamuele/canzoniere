{
  "notes": {
    "system": "latin"
  },
  "pdf": {
    "pagealign-songs": 0,
    "even-odd-pages": 0,
    "formats": {
      "title": {
        "subtitle": [
          "%{artist}",
          "",
          ""
        ]
      },
      "first": {
        "footer": [
          "",
          "",
          "%{page}"
        ]
      }
    },
    "fonts": {
      "text" : {
        "description" : "Times-Roman",
        "size" : 12
      },
      "chord" : {
        "description" : "Helvetica-Oblique",
        "color" : "#0000FF",
        "size" : 10
      }
    },
    "chorus": {
      "tag": "Rit."
    },
    "labels": {
      "width": "auto"
    }
  },
  "contents": [
    {
      "fields": [
        "songindex"
      ],
      "label": "Canzoni",
      "line": "%{title}%{artist| - %{}}",
      "pageno": "%{page}",
      "omit": false,
      "template": "stdtoc"
    },
    {
      "fields": [
        "sorttitle",
        "artist"
      ],
      "label": "Contents by Title",
      "line": "%{title}%{artist| - %{}}",
      "pageno": "%{page}",
      "omit": true,
      "template": "stdtoc"
    },
    {
      "fields": [
        "artist",
        "sorttitle"
      ],
      "label": "Contents by Artist",
      "line": "%{artist|%{} - }%{title}",
      "pageno": "%{page}",
      "omit": true,
      "template": "stdtoc"
    }
  ]
}